<%= simple_form_for(@day, as: :day, method: :post, url: days_path) do |f| %>
    <div class="form-inputs">
      <%= f.input :name,
                  label: 'Nom',
                  required: true,
                  autofocus: true,
                  input_html: { autocomplete: "name" } %>
      <%= f.input :location,
                  label: 'Lieu',
                  required: false,
                  autofocus: true,
                  input_html: { autocomplete: "location" } %>
      <%= f.input :date, as: :date, start_year: Date.today.year,
                  end_year: Date.today.year - 2,
                  order: [:day, :month, :year],
                  label: 'Date',
                  required: true,
                  autofocus: true,
                  input_html: { autocomplete: "date" } %>
      <%= f.input :tag_line,
                  label: 'Titre',
                  placeholder: 'ex: Avez vous apprécier notre présentation',
                  required: true,
                  autofocus: true,
                  input_html: { autocomplete: "tag_line" } %>
    </div>

    <div class="form-actions">
      <%= f.button :submit, "Enregistrer", class:'btn btn-primary' %>
    </div>
  <% end %>
</div>
