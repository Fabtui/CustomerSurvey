<%= render 'shared/navbar' %>
<div class="container">
  <div class="back-link">
    <%= link_to days_path do %>
      <i class="fa fa-arrow-left"></i>
    <% end %>
  </div>
  <h2 class="text-center days-title">Créer un nouveau dossier</h2>
  <%= simple_form_for(@folder) do |f| %>
    <div id="new-day-form" class="form-inputs">
      <%= f.input :name,
                  label: 'Nom',
                  required: true,
                  autofocus: true,
                  input_html: { autocomplete: "name" } %>
      <%= f.input :days, :collection => @days, :value_method => :id,:label => "Evènements" ,:include_blank => true %>
    </div>
    <div class="form-actions">
      <%= link_to "Annuler", days_path, class:'btn btn-danger' %>
      <%= f.button :submit, "Enregistrer", class:'btn btn-primary', id:"save-new-day" %>
    </div>
  <% end %>
</div>
